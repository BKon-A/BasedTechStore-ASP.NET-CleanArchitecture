                            @*             <li><a class="dropdown-item" href="#">HP</a></li> *@
                            @*             <li><a class="dropdown-item" href="#">Інші</a></li> *@
                            @*         </ul> *@
                            @*     </li> *@

                            @*     <!-- Аксесуари --> *@
                            @*     <li class="dropdown-submenu"> *@
                            @*         <a class="dropdown-item dropdown-toggle" asp-controller="Products" asp-action="Index" asp-route-category="accessories">Аксесуари</a> *@
                            @*         <ul class="dropdown-menu"> *@
                            @*             <li><a class="dropdown-item" href="#">Навушники</a></li> *@
                            @*             <li><a class="dropdown-item" href="#">Інше</a></li> *@
                            @*         </ul> *@
                            @*     </li> *@

                            @*     <!-- Комплектуючі --> *@
                            @*     <li class="dropdown-submenu"> *@
                            @*         <a class="dropdown-item dropdown-toggle" asp-controller="Products" asp-action="Index" asp-route-category="details">Комплектуючі</a> *@
