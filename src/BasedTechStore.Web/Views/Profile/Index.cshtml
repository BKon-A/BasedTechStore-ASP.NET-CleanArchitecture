@{
    ViewData["Title"] = "Профіль";
}

<h1>Профіль</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class=" card-title text-center">Профіль</h5>

                    <div class="d-flex justify-content-center">
                        <img src="~/images/user.png" class="img-fluid" alt="User Image" />

                    </div>

                    <div class="d-flex justify-content-center">
                        <a href="#" class="btn btn-primary">Змінити фото</a>

                    </div>

                    <div class="d-flex justify-content-center">
                        <a href="#" class="btn btn-primary">Змінити пароль</a>

                    </div>

                    <div class="d-flex justify-content-center">
                        <a href="#" class="btn btn-primary">Змінити дані</a>

                    </div>

                </div>

            </div>

        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class=" card-title

text-center">
                        Особисті дані
                    </h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Name" />
                                <label for="floatingInput">ПІБ</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control" id="floatingDate" placeholder="BirthDate" />
                                <label for="floatingDate">Дата народження</label>
                            </div>
                        </div>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="Email" />
                        <label for="floatingInput">Email</label>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Phone" />
                        <label for="floatingInput">Телефон</label>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Address" />
                        <label for="floatingInput">Адреса</label>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="City" />
                        <label for="floatingInput">Місто</label>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Country" />
                        <label for="floatingInput">Країна</label>

                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-primary">Зберегти</button>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

